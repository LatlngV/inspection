<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="attendance_time_tree" model="ir.ui.view">
            <field name="name">attendance_time.tree</field>
            <field name="model">inspection.attendance_time</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_time" widget="float_time"/>
                    <field name="end_time" widget="float_time"/>
                </tree>
            </field>
        </record>
        <record id="attendance_time_form" model="ir.ui.view">
            <field name="name">attendance_time.form</field>
            <field name="model">inspection.attendance_time</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="remark"/>
                        </group>
                        <notebook>
                            <page string="员工">
                                <field name="employee_id" widget="many2many_checkboxes" context="{'search_default_no_share':True}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

