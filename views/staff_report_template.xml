<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="dotop_patrol_track">
        &lt;!DOCTYPE html&gt;
        <html>
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="initial-scale=1.0, user-scalable=no"/>
                <title>报表</title>
            </head>
            <body>
                <section class="content">
                    <form id="form1" action="" method="get">
                        <input id="area" type="hidden" name="area" value="2"/>
                        <input id="date_type" type="hidden" name="date_type" value="3"/>
                        <div class="form-group col-xs-5">
                            <label style="display: inline-block;">选择日期</label>
                            <input name="date" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'})"
                                   style="display: inline-block; width: 70%;" type="text" class="form-control"/>
                        </div>
                        <div class="form-group col-xs-5 hide">
                            <label style="display: inline-block;">选择月份</label>
                            <input name="month" onclick="WdatePicker({dateFmt:'yyyy-MM'})"
                                   style="display: inline-block; width: 70%;" type="text" class="form-control"/>
                        </div>
                        <div class="form-group col-xs-5 hide">
                            <label style="display: inline-block;">选择年份</label>
                            <input name="year" onclick="WdatePicker({dateFmt:'yyyy'})"
                                   style="display: inline-block; width: 70%;" type="text" class="form-control"/>
                        </div>
                        <button type="button" class="btn btn-info btn-flat" id="day_report">日报表</button>
                        <button type="button" class="btn btn-info btn-flat" id="month_report">月报表</button>
                        <button type="button" class="btn btn-flat" id="year_report">年报表</button>
                        &nbsp;&nbsp;
                        <button type="button" class="btn btn-flat" id="list_view">列表</button>
                        <button type="button" class="btn btn-warning btn-flat" id="bar_view">柱状图</button>
                    </form>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box box-primary">
                                <ul class="nav nav-tabs">

                                </ul>
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th rowspan="2">巡护人</th>
                                            <th rowspan="2">巡线区域</th>
                                            <th rowspan="2">管线长度(Km)</th>
                                            <th rowspan="2">行驶里程(Km)</th>
                                            <th rowspan="2">必经点</th>
                                            <th rowspan="2">任务量</th>
                                            <th colspan="2">规定范围</th>
                                            <th colspan="2">100米</th>
                                            <th colspan="2">200米</th>
                                            <th colspan="2">500米</th>
                                            <th colspan="2">1000米</th>
                                        </tr>
                                        <tr>
                                            <th>完成量</th>
                                            <th>完成率</th>
                                            <th>完成量</th>
                                            <th>完成率</th>
                                            <th>完成量</th>
                                            <th>完成率</th>
                                            <th>完成量</th>
                                            <th>完成率</th>
                                            <th>完成量</th>
                                            <th>完成率</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="box-body">
                                <font color="red">&nbsp;颜色说明：0%-40%红色，40%-60%橙色，60%-80%黄色，80%-100%绿色。</font>
                            </div>
                            <div class="col-xs-12" align="right">
                                <a href="http://121.42.136.94/admin/Chart/excel/3.html" class="btn btn-info">导出Excel</a>
                            </div>
                            <div class="box-footer clearfix">
                            </div>
                        </div>
                    </div>
                </section>
            </body>
        </html>
    </template>

</odoo>
